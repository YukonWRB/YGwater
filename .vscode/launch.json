    "version": "0.2.0",
    "configurations": [
        {
            "type": "R-Debugger",
            "name": "Debug R-File",
            "request": "launch",
            "debugMode": "file",
            "workingDirectory": "",
            "file": ""
        },
        {
            "type": "node-terminal",
            "name": "JavaScript Debug Terminal",
            "request": "launch",
            "justMyCode": false // Set to false to debug external code, true to debug only user code
        },
        {
            "type": "python",
            "request": "launch",
            "name": "Python Debug",
            "program": "${file}", // Adjust as needed for your Python entry point
            "justMyCode": false // Set to false to debug external libraries, true to debug only user code
        }
    ]
}